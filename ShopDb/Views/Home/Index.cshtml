@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
@model List<Product>

@{
    ViewData["Title"] = "Home Page";
}


<!--Section: Top Sold Products -->
      <section class="text-center">
        <h4 class="mb-5"><strong>Suosituimmat tuotteet</strong></h4>

        <div class="row">
            @foreach (var item in Model)
        {
          <div class="col-lg-3 col-md-4 mb-4">
            <div class="card">
              <div class="p-4 bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                <img src="@(item.PictureUrl!=null ? item.PictureUrl : "https://mdbootstrap.com/img/new/standard/nature/184.jpg")" class="img-fluid" />
                <a href="#!">
                  <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                </a>
              </div>
              <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">
                  @item.Price €
                </p>
                <a href="/Product/Details/@item.Id" class="btn btn-secondary">Tuotteen tiedot</a>
              </div>
            </div>
          </div>
        }
        </div>
      </section>
      <!--Section:  Top Sold Products -->

