@model ShopDb.Models.Product

@{
    ViewData["Title"] = "Details";
}
<div class="p-4 bg-light bg-semitransparent">
<h1>Tuotteen tiedot</h1>
<br />
    <h4>Tuote</h4>
    <hr />
    <div class="p-4 bg-light bg-semitransparent">
    <dl class="row">
        <dt class = "col-sm-2">
            Nimi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Tuotekuvaus
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Hinta
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Varastossa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity) kpl
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PictureUrl)
        </dt>
        <dd class = "col-sm-10 text-wrap">
            @Html.DisplayFor(model => model.PictureUrl)
        </dd>
        <dt class = "col-sm-2">
            Tuoteryhmä
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Id)
        </dd>
    </dl>
    @*</div>*@

<div>
    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model?.Id">Muokkaa</a> 
     <a class="btn btn-light" asp-action="Index">Takaisin</a>
</div>
</div>
